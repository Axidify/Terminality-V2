// Prisma schema for Postgres (production)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model State {
  id   Int  @id @default(1)
  // Use String to store a JSON-serialized representation
  data String
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  email    String? @unique
  password String
  role     String  @default("user")
  tokens   Token[]
  messages Message[] @relation("UserMessages")
}

model Token {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  createdAt DateTime @default(now())
  expiresAt DateTime?
  revoked   Boolean  @default(false)
  type      String   @default("session")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  room      String   @default("general")
  user      User?    @relation("UserMessages", fields: [userId], references: [id])
  userId    Int?
}

model QuestFlow {
  id         Int              @id @default(autoincrement())
  slug       String           @unique
  codename   String
  tagline    String
  summary    String?
  difficulty String           @default("standard")
  status     String           @default("draft")
  stageOrder String?
  metadata   String?
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  objectives QuestObjective[]
  nodes      QuestNode[]
  puzzles    QuestPuzzle[]
}

model QuestObjective {
  id          Int       @id @default(autoincrement())
  quest       QuestFlow @relation(fields: [questId], references: [id], onDelete: Cascade)
  questId     Int
  objectiveId String
  text        String
  position    Int
  stage       String?

  @@unique([questId, objectiveId])
  @@index([questId, position])
}

model QuestNode {
  id           Int       @id @default(autoincrement())
  quest        QuestFlow @relation(fields: [questId], references: [id], onDelete: Cascade)
  questId      Int
  nodeId       String
  label        String
  description  String
  exposures    String
  requiredTool String
  puzzleKey    String
  position     Int

  @@unique([questId, nodeId])
  @@index([questId, position])
}

model QuestPuzzle {
  id        Int       @id @default(autoincrement())
  quest     QuestFlow @relation(fields: [questId], references: [id], onDelete: Cascade)
  questId   Int
  puzzleKey String
  type      String
  prompt    String
  solution  String
  hints     String
  reward    String
  isFinale  Boolean   @default(false)

  @@unique([questId, puzzleKey])
}
