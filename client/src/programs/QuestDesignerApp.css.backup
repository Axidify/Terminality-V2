.quest-designer-app {
	display: grid;
	grid-template-columns: 18rem minmax(0, 1fr);
	height: 100%;
	color: #e2e8f0;
	background: #020617; /* Deepest slate/black */
	font-family: 'Inter', system-ui, sans-serif;
	min-width: 0;
}

.quest-designer-sidebar {
	border-right: 1px solid rgba(30, 41, 59, 0.5);
	padding: 1rem;
	overflow-y: auto;
	background: rgba(15, 23, 42, 0.4);
	backdrop-filter: blur(10px);
}

.quest-sidebar-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	gap: 1rem;
	margin-bottom: 1.5rem;
	padding-bottom: 1rem;
	border-bottom: 1px solid rgba(148, 163, 184, 0.1);
}

.quest-sidebar-header h2 {
	margin: 0;
	font-size: 1.1rem;
	font-weight: 600;
	letter-spacing: -0.02em;
	color: #f8fafc;
}

.quest-sidebar-controls {
	display: flex;
	flex-direction: column;
	gap: 0.75rem;
	margin-bottom: 1rem;
}

.quest-search {
	width: 100%;
	padding: 0.5rem 0.75rem;
	border-radius: 0.5rem;
	border: 1px solid rgba(148, 163, 184, 0.3);
	background: rgba(15, 23, 42, 0.6);
	color: inherit;
}

.quest-filter-group {
	display: flex;
	flex-wrap: wrap;
	gap: 0.5rem;
}

.filter-chip {
	border: 1px solid rgba(148, 163, 184, 0.3);
	border-radius: 999px;
	padding: 0.25rem 0.75rem;
	background: transparent;
	color: inherit;
	cursor: pointer;
}

.filter-chip.active {
	background: rgba(59, 130, 246, 0.15);
	border-color: rgba(59, 130, 246, 0.6);
}

.quest-list ul {
	list-style: none;
	padding: 0;
	margin: 0;
	display: flex;
	flex-direction: column;
	gap: 0.75rem;
}

.quest-row {
	border: 1px solid transparent;
	border-radius: 0.5rem;
	background: transparent;
	transition: all 0.2s ease;
	margin-bottom: 0.25rem;
}

.quest-row:hover {
	background: rgba(30, 41, 59, 0.5);
	transform: translateX(2px);
}

.quest-row.selected {
	background: rgba(56, 189, 248, 0.1);
	border-color: rgba(56, 189, 248, 0.3);
	box-shadow: 0 0 15px rgba(56, 189, 248, 0.05);
}

.quest-row-main {
	width: 100%;
	display: flex;
	justify-content: space-between;
	gap: 1rem;
	padding: 0.75rem 1rem;
	background: transparent;
	color: inherit;
	border: none;
	text-align: left;
	cursor: pointer;
}

.quest-row-title {
	display: flex;
	gap: 0.5rem;
	align-items: center;
	font-weight: 500;
	color: #f1f5f9;
}

.quest-row-description {
	margin: 0.25rem 0 0;
	font-size: 0.8rem;
	color: #94a3b8;
	line-height: 1.4;
}

.quest-row-actions {
	display: flex;
	gap: 0.25rem;
	padding: 0 1rem 0.75rem;
	opacity: 0;
	transition: opacity 0.2s;
}

.quest-row:hover .quest-row-actions {
	opacity: 1;
}

.quest-row-actions button {
	border: none;
	background: rgba(30, 41, 59, 0.7);
	color: inherit;
	border-radius: 0.4rem;
	padding: 0.35rem 0.75rem;
	cursor: pointer;
}

.difficulty-badge {
	border-radius: 0.5rem;
	padding: 0.25rem 0.5rem;
	font-size: 0.75rem;
	text-transform: uppercase;
	opacity: 0.9;
}

.difficulty-badge.tutorial { background: rgba(16, 185, 129, 0.2); }
.difficulty-badge.easy { background: rgba(59, 130, 246, 0.2); }
.difficulty-badge.medium { background: rgba(251, 191, 36, 0.2); }
.difficulty-badge.hard { background: rgba(248, 113, 113, 0.2); }
.difficulty-badge.boss { background: rgba(192, 38, 211, 0.2); }

.pill {
	border-radius: 999px;
	padding: 0.1rem 0.6rem;
	font-size: 0.75rem;
	text-transform: uppercase;
}

.pill.success { background: rgba(34, 197, 94, 0.2); }
.pill.warning { background: rgba(251, 191, 36, 0.2); }
.pill.danger { background: rgba(248, 113, 113, 0.2); }

.primary {
	appearance: none;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	gap: 0.35rem;
	min-height: 2.25rem;
	padding: 0.4rem 0.95rem;
	border-radius: 0.375rem;
	border: 1px solid transparent;
	background: linear-gradient(135deg, #0ea5e9, #2563eb);
	color: #fff;
	font-weight: 600;
	font-size: 0.85rem;
	letter-spacing: 0.04em;
	text-transform: uppercase;
	cursor: pointer;
	box-shadow: 0 4px 6px -1px rgba(15, 23, 42, 0.4);
	transition: transform 0.15s ease, box-shadow 0.15s ease, filter 0.15s ease;
}

.primary:hover {
	filter: brightness(1.05);
	transform: translateY(-1px);
	box-shadow: 0 10px 15px -3px rgba(15, 23, 42, 0.5);
}

.primary:active {
	transform: translateY(0);
}

.primary:disabled {
	opacity: 0.5;
	cursor: not-allowed;
}

.ghost {
	appearance: none;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	gap: 0.35rem;
	min-height: 2.25rem;
	padding: 0.4rem 0.95rem;
	border-radius: 0.375rem;
	border: 1px solid rgba(148, 163, 184, 0.35);
	background: transparent;
	color: #94a3b8;
	font-weight: 500;
	font-size: 0.85rem;
	letter-spacing: 0.04em;
	text-transform: uppercase;
	cursor: pointer;
	transition: background 0.15s ease, color 0.15s ease, border-color 0.15s ease, transform 0.15s ease;
}

.ghost:hover {
	background: rgba(148, 163, 184, 0.12);
	color: #e2e8f0;
	border-color: rgba(148, 163, 184, 0.6);
}

.ghost:disabled {
	opacity: 0.5;
	cursor: not-allowed;
}

.ghost.danger {
	border-color: rgba(248, 113, 113, 0.6);
	color: rgba(248, 113, 113, 0.9);
}

.danger {
	background: rgba(248, 113, 113, 0.2);
	border: none;
	color: #fecaca;
	padding: 0.5rem 1rem;
	border-radius: 0.5rem;
	cursor: pointer;
}

.quest-designer-workspace {
	padding: 1.25rem 1.5rem;
	overflow: hidden;
	display: flex;
	flex-direction: column;
	gap: 1rem;
}

.quest-workspace-tabs {
	display: flex;
	flex-wrap: wrap;
	gap: 0.5rem;
	margin-bottom: 0.25rem;
}

.workspace-tab {
	border-radius: 999px;
	border: 1px solid transparent;
	background: transparent;
	color: #94a3b8;
	padding: 0.35rem 0.9rem;
	font-size: 0.8rem;
	font-weight: 500;
	letter-spacing: 0.05em;
	text-transform: uppercase;
	cursor: pointer;
	transition: all 0.15s ease;
}

.workspace-tab:hover {
	background: rgba(30, 41, 59, 0.6);
	color: #e2e8f0;
}

.workspace-tab.active {
	border-color: rgba(56, 189, 248, 0.4);
	background: rgba(56, 189, 248, 0.14);
	color: #38bdf8;
}

.workspace-helper {
	margin-top: 0;
	margin-bottom: 1rem;
}

.quest-empty-state {
	border: 1px dashed rgba(148, 163, 184, 0.5);
	border-radius: 1rem;
	padding: 2rem;
	text-align: center;
	background: rgba(15, 23, 42, 0.5);
}

/* Wizard shell */
.quest-wizard {
	display: grid;
	grid-template-rows: auto 1fr auto;
	row-gap: 1.25rem;
}

.quest-wizard-header h3,
.quest-wizard-header h4 {
	margin: 0;
	font-weight: 600;
	letter-spacing: -0.01em;
}

.quest-stepper {
	display: flex;
	flex-wrap: wrap;
	gap: 0.75rem;
	margin: 1.5rem 0;
	padding-bottom: 1rem;
	border-bottom: 1px solid rgba(148, 163, 184, 0.1);
}

.step-chip {
	display: flex;
	align-items: center;
	gap: 0.5rem;
	padding: 0.5rem 1rem;
	border-radius: 0.5rem;
	border: 1px solid transparent;
	background: rgba(30, 41, 59, 0.5);
	color: #94a3b8;
	font-size: 0.85rem;
	font-weight: 500;
	transition: all 0.2s;
}

.step-chip:hover {
	background: rgba(51, 65, 85, 0.8);
	color: #e2e8f0;
}

.step-chip.active {
	border-color: rgba(56, 189, 248, 0.3);
	background: rgba(56, 189, 248, 0.1);
	color: #38bdf8;
	box-shadow: 0 0 10px rgba(56, 189, 248, 0.1);
}

.step-chip.complete {
	border-color: rgba(34, 197, 94, 0.3);
	background: rgba(34, 197, 94, 0.1);
	color: #4ade80;
}

.step-chip.error {
	border-color: rgba(248, 113, 113, 0.3);
	background: rgba(248, 113, 113, 0.1);
	color: #f87171;
}

.step-index {
	font-weight: 600;
	font-size: 0.85rem;
}

.quest-wizard-body {
	background: rgba(15, 23, 42, 0.6);
	border-radius: 0.75rem;
	padding: 1.25rem;
	border: 1px solid rgba(148, 163, 184, 0.15);
}

.quest-mail-panel {
	display: flex;
	flex-direction: column;
	gap: 1rem;
}

.wizard-form {
	display: grid;
	grid-template-columns: repeat(2, minmax(0, 1fr));
	column-gap: 1.25rem;
	row-gap: 0.9rem;
}

.wizard-form label {
	display: flex;
	flex-direction: column;
	gap: 0.35rem;
	font-weight: 500;
}

.wizard-form input,
.wizard-form textarea,
.wizard-form select {
	border-radius: 0.375rem;
	border: 1px solid rgba(148, 163, 184, 0.25);
	padding: 0.55rem 0.8rem;
	background: rgba(15, 23, 42, 0.7);
	color: #f1f5f9;
	font-family: inherit;
	font-size: 0.9rem;
	min-height: 2.25rem;
	transition: border-color 0.15s ease, box-shadow 0.15s ease, background 0.15s ease;
}

.wizard-form textarea {
	min-height: 5.5rem;
}

.wizard-form input:focus,
.wizard-form textarea:focus,
.wizard-form select:focus {
	outline: none;
	border-color: rgba(56, 189, 248, 0.6);
	box-shadow: 0 0 0 2px rgba(56, 189, 248, 0.18);
	background: rgba(15, 23, 42, 0.9);
}

.field-row {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(12rem, 1fr));
	gap: 1rem;
}

.inline-actions {
	display: flex;
	gap: 0.5rem;
}

.inline-alert {
	border-radius: 0.65rem;
	padding: 0.75rem 1rem;
}

.inline-alert.error {
	border: 1px solid rgba(248, 113, 113, 0.6);
	background: rgba(248, 113, 113, 0.1);
}

.inline-alert.info {
	border: 1px solid rgba(59, 130, 246, 0.35);
	background: rgba(59, 130, 246, 0.12);
}

.inline-alert.warning {
	border: 1px solid rgba(251, 191, 36, 0.5);
	background: rgba(251, 191, 36, 0.15);
}

.quest-wizard-footer {
	display: flex;
	gap: 0.75rem;
	align-items: center;
	justify-content: flex-end;
}

.quest-wizard-footer .spacer {
	flex: 1;
}

.step-list {
	list-style: none;
	padding: 0;
	margin: 0;
	display: flex;
	flex-direction: column;
	gap: 0.75rem;
}

.step-card {
	border: 1px solid rgba(148, 163, 184, 0.2);
	border-radius: 0.75rem;
	padding: 0.9rem;
	background: rgba(15, 23, 42, 0.4);
}

.step-card-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 0.5rem;
}

.summary section {
	border-bottom: 1px solid rgba(148, 163, 184, 0.2);
	padding-bottom: 0.5rem;
}

.summary section:last-child {
	border-bottom: none;
}

.summary-errors {
	border: 1px solid rgba(248, 113, 113, 0.4);
	background: rgba(248, 113, 113, 0.08);
	border-radius: 0.75rem;
	padding: 1rem;
}

.param-list {
	border: 1px solid rgba(148, 163, 184, 0.2);
	border-radius: 0.75rem;
	padding: 0.75rem;
	margin-top: 0.75rem;
	background: rgba(15, 23, 42, 0.35);
}

.param-list-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 0.5rem;
}

.param-row {
	display: grid;
	grid-template-columns: 1fr 1fr auto;
	gap: 0.35rem;
	align-items: center;
	margin-bottom: 0.4rem;
}

.param-row input {
	width: 100%;
}

.quest-modal-overlay {
	position: fixed;
	inset: 0;
	background: rgba(15, 23, 42, 0.7);
	display: flex;
	align-items: center;
	justify-content: center;
	z-index: 1000;
}

/* Compact / collapsed sidebar states */
.quest-designer-app.collapsed {
	grid-template-columns: 4rem 1fr;
}

.quest-designer-app.collapsed .quest-designer-sidebar {
	width: 4rem;
	padding: 0.5rem;
}

.quest-designer-app.collapsed .quest-search,
.quest-designer-app.collapsed .quest-filter-group,
.quest-designer-app.collapsed .quest-row-description {
	display: none;
}

.quest-designer-sidebar.compact {
	width: 4rem;
	padding: 0.5rem;
}

/* New layout: two-column wizard content */
.quest-wizard {
	display: grid;
	grid-template-columns: minmax(0, 1.3fr) minmax(280px, 0.9fr);
	column-gap: 1.5rem;
}

.quest-wizard .quest-wizard-header {
	grid-column: 1 / -1;
	margin-bottom: 0.5rem;
}

.quest-wizard .quest-wizard-footer {
	grid-column: 1 / -1;
	margin-top: 1rem;
	padding-top: 1rem;
	border-top: 1px solid rgba(148, 163, 184, 0.1);
}

.wizard-main {
	min-width: 0;
	display: flex;
	flex-direction: column;
	gap: 1.25rem;
}

.wizard-side {
	background: rgba(30, 41, 59, 0.3);
	border-radius: 0.5rem;
	padding: 1.25rem;
	border: 1px solid rgba(148, 163, 184, 0.1);
	height: fit-content;
}

.wizard-side__card p.eyebrow {
	margin: 0 0 0.5rem 0;
	font-size: 0.75rem;
	text-transform: uppercase;
	letter-spacing: 0.05em;
	color: #94a3b8;
	font-weight: 600;
}

.wizard-side__card h4 {
	margin: 0 0 1rem 0;
	font-size: 1rem;
	color: #f1f5f9;
}

/* Two-column form fields */
.wizard-form label {
	margin-bottom: 0;
}

@media (max-width: 960px) {
	.quest-designer-app {
		grid-template-columns: 1fr;
	}
	.quest-designer-sidebar {
		border-right: none;
		border-bottom: 1px solid rgba(148, 163, 184, 0.25);
	}
	.quest-designer-workspace {
		padding: 1rem;
	}
	.quest-wizard {
		grid-template-columns: 1fr;
	}
	.wizard-form {
		grid-template-columns: 1fr;
	}
}

.quest-modal {
	background: #0f172a;
	border-radius: 0.75rem;
	padding: 1.5rem;
	border: 1px solid rgba(59, 130, 246, 0.3);
	width: min(26rem, 90vw);
	box-shadow: 0 20px 50px rgba(15, 23, 42, 0.5);
}

.quest-modal footer {
	display: flex;
	justify-content: flex-end;
	gap: 0.5rem;
	margin-top: 1.5rem;
}

.muted {
	color: rgba(203, 213, 225, 0.7);
}

.empty-state {
	padding: 1rem;
	border-radius: 0.75rem;
	background: rgba(15, 23, 42, 0.4);
}

.mail-step {
	display: flex;
	flex-direction: column;
	gap: 1rem;
}

.mail-step__grid {
	display: grid;
	grid-template-columns: minmax(14rem, 0.85fr) 1.15fr;
	gap: 1.25rem;
}

.mail-context-card {
	border: 1px solid rgba(148, 163, 184, 0.2);
	border-radius: 0.85rem;
	background: rgba(15, 23, 42, 0.55);
	padding: 1rem;
	display: flex;
	flex-direction: column;
	gap: 0.75rem;
}

.mail-context-card ul {
	list-style: none;
	padding: 0;
	margin: 0;
	display: flex;
	flex-direction: column;
	gap: 0.35rem;
}

.mail-quick-actions {
	display: flex;
	flex-direction: column;
	gap: 0.5rem;
}

.mail-chip-row {
	display: flex;
	flex-wrap: wrap;
	gap: 0.4rem;
}

.mail-chip {
	border: 1px solid rgba(148, 163, 184, 0.4);
	background: rgba(15, 23, 42, 0.4);
	color: inherit;
	border-radius: 999px;
	padding: 0.25rem 0.75rem;
	font-size: 0.85rem;
	cursor: pointer;
}

.mail-chip.active {
	border-color: rgba(59, 130, 246, 0.85);
	background: rgba(59, 130, 246, 0.2);
}

.mail-step__composer {
	display: flex;
	flex-direction: column;
	gap: 0.65rem;
}

.mail-step__composer label input,
.mail-step__composer label textarea {
	width: 100%;
}

.mail-token-bar {
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	gap: 0.35rem;
	font-size: 0.9rem;
}

.mail-preview-card {
	border: 1px solid rgba(148, 163, 184, 0.2);
	border-radius: 0.85rem;
	background: rgba(15, 23, 42, 0.55);
	padding: 0.85rem;
	display: flex;
	flex-direction: column;
	gap: 0.5rem;
}

.mail-preview-card header {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.mail-preview-card__body {
	border-radius: 0.75rem;
	background: rgba(30, 41, 59, 0.7);
	padding: 0.75rem;
	display: flex;
	flex-direction: column;
	gap: 0.25rem;
}

.mail-preview-from {
	font-weight: 600;
}

.mail-preview-subject {
	font-size: 0.95rem;
}

.mail-preview-snippet {
	font-size: 0.85rem;
	color: rgba(226, 232, 240, 0.8);
}

.mail-variant-list {
	display: flex;
	flex-direction: column;
	gap: 0.75rem;
	margin-top: 1rem;
	border: 1px solid rgba(148, 163, 184, 0.2);
	border-radius: 0.85rem;
	padding: 1rem;
	background: rgba(15, 23, 42, 0.45);
}

.mail-variant-list header {
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	gap: 1rem;
}

.mail-variant-card {
	border: 1px solid rgba(148, 163, 184, 0.25);
	border-radius: 0.85rem;
	padding: 0.85rem;
	background: rgba(15, 23, 42, 0.6);
	display: flex;
	flex-direction: column;
	gap: 0.75rem;
}

.mail-variant-card header {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.mail-variant-actions {
	display: flex;
	gap: 0.5rem;
}

.mail-variant-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(12rem, 1fr));
	gap: 0.75rem;
}

.mail-variant-grid label textarea {
	min-height: 6rem;
}

.mail-condition-list {
	display: flex;
	flex-direction: column;
	gap: 0.5rem;
}

.mail-condition-row {
	display: flex;
	align-items: flex-start;
	gap: 0.75rem;
	border: 1px dashed rgba(148, 163, 184, 0.3);
	border-radius: 0.75rem;
	padding: 0.65rem;
	flex-wrap: wrap;
}

.mail-condition-inputs {
	display: flex;
	flex-wrap: wrap;
	gap: 0.5rem;
	flex: 1;
}

.mail-condition-inputs select,
.mail-condition-inputs input {
	min-width: 10rem;
}

.mail-condition-actions {
	display: flex;
	flex-direction: column;
	gap: 0.35rem;
}

.tool-select-field {
	border: 1px solid rgba(148, 163, 184, 0.3);
	border-radius: 0.75rem;
	padding: 0.75rem 1rem 1rem;
	margin: 0;
}

.tool-select-field legend {
	font-size: 0.95rem;
	font-weight: 600;
	margin-bottom: 0.25rem;
}

.tool-dropdown {
	position: relative;
	margin-top: 0.5rem;
}

.tool-dropdown-trigger {
	width: 100%;
	padding: 0.5rem 0.75rem;
	border-radius: 0.5rem;
	border: 1px solid rgba(148, 163, 184, 0.4);
	background: rgba(15, 23, 42, 0.7);
	color: inherit;
	text-align: left;
	cursor: pointer;
}

.tool-dropdown-panel {
	position: absolute;
	top: calc(100% + 0.4rem);
	left: 0;
	right: 0;
	max-height: 15rem;
	overflow-y: auto;
	padding: 0.5rem;
	border-radius: 0.75rem;
	border: 1px solid rgba(59, 130, 246, 0.4);
	background: rgba(15, 23, 42, 0.98);
	box-shadow: 0 10px 30px rgba(2, 6, 23, 0.6);
	z-index: 10;
}

.tool-dropdown-option {
	display: flex;
	gap: 0.75rem;
	padding: 0.45rem 0.25rem;
	border-bottom: 1px solid rgba(148, 163, 184, 0.15);
}

.tool-dropdown-option:last-child {
	border-bottom: none;
}

.tool-dropdown-option input[type="checkbox"] {
	margin-top: 0.2rem;
}

.recon-step {
	display: flex;
	flex-direction: column;
	gap: 1.25rem;
}

.recon-section {
	border: 1px solid rgba(59, 130, 246, 0.15);
	border-radius: 0.85rem;
	padding: 1rem;
	background: rgba(15, 23, 42, 0.45);
}

.recon-section header {
	margin-bottom: 0.75rem;
}

.recon-target-actions {
	display: flex;
	flex-wrap: wrap;
	gap: 0.5rem;
	margin-bottom: 0.5rem;
}

.recon-target-list {
	display: flex;
	flex-direction: column;
	gap: 0.75rem;
}

.recon-target-card {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(14rem, 1fr));
	gap: 0.75rem;
	border: 1px solid rgba(148, 163, 184, 0.3);
	border-radius: 0.75rem;
	padding: 0.75rem;
	background: rgba(15, 23, 42, 0.35);
}

.recon-target-card button {
	justify-self: flex-start;
	margin-top: auto;
}

.recon-constraints-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(14rem, 1fr));
	gap: 1rem;
}

.recon-trace-cap {
	display: flex;
	flex-direction: column;
	gap: 0.35rem;
}

.recon-trace-actions {
	display: flex;
	gap: 0.5rem;
}

@media (max-width: 960px) {
	.mail-step__grid {
		grid-template-columns: 1fr;
	}
}
